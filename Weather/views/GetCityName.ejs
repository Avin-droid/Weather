<html>
    <head>
        <style>
            body 
            {
                display: flex;
                justify-content: center;
                align-items: center;
                background:linear-gradient(to right, rgba(0, 0, 255, 0.455),rgba(0, 0, 0, 0.784));
            }

            form 
            {
                background: linear-gradient(to right, rgba(0, 0, 0, 0.37), rgba(255, 255, 255, 0.671));
                display: flex;
                width:400px;
                flex-direction: column;
                align-items: center;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 30px black;
                margin-bottom: 30px;
            }

            label 
            {
                font-size: 50px;
                margin-bottom: 10px;
                color: black;
                font-weight: bolder;
                text-decoration: underline;
            }

            input[type="text"] 
            {
                width: 250px;
                padding: 10px;
                font-size: 1rem;
                margin-bottom: 20px;
                border: 1px solid white;
                border-radius: 5px;
                box-shadow: inset 0 1px 3px black;
            }

            input[type="submit"],
            input[type="reset"] {
                width: 150px;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                margin: 5px;
                color: white;
            }

            input[type="submit"] 
            {
                background-color: green;
            }

            input[type="reset"] 
            {
                background-color: red;

            }
        </style>
    </head>
    <body>
        <form action="/GetCityName" method="get">
            <label for="city">Enter City</label>
            <input type="text" name="ct" placeholder="Enter City Name here" required pattern="^[A-Za-z]+"/><br><br>

            <input type="submit" value="GET WEATHER" />
            <input type="reset" value="CLEAR" />
        </form>
    </body>
</html>